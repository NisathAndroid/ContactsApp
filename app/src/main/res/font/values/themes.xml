<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ILook" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:windowFullscreen">true</item>

        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/md_theme_onPrimaryContainer</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- <item name="navigationViewStyle">@style/CustomNavigationView</item>-->
        <!-- Set the font family for all text in the app -->
        <item name="android:textAppearance">@style/TextAppearance.App.Font</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <!-- Define the TextAppearance style -->
    <style name="TextAppearance.App.Font" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/opensans_regular</item>
    </style>
    <!-- Splash screen theme -->
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.DayNight.NoActionBar</item>
    </style>

    <style name="Theme.ILook" parent="Base.Theme.ILook" />

    <style name="ButtonTheme" parent="Base.Theme.ILook">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>

    </style>

    <style name="ILook.TextHead" parent="Base.Theme.ILook">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/hs_black</item>
        <item name="android:textSize">@dimen/text_25sp</item>
    </style>

    <style name="ILook.TextSub" parent="Base.Theme.ILook">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <!-- Hint text appearance -->
    <style name="hintStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TextInputEditText style -->
    <style name="textInputEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.ILook.Fullscreen" parent="Theme.ILook">
        <item name="android:actionBarStyle">@style/Widget.Theme.ILook.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>


    <!-- Custom NavigationView Style -->
    <style name="CustomNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/nav_item_icon_tint</item>
        <item name="itemTextColor">@color/nav_item_text_color</item>
        <!--  <item name="itemBackground">@drawable/nav_item_background</item>-->
    </style>

    <!--tab layout style-->
    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyCustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize the attributes as needed -->
    </style>
</resources>